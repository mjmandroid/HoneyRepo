<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:id="@+id/layLSpinnerItem" >

    <View
        android:id="@+id/viewSLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lib_ptr_dividing_line_light"
        android:layout_marginLeft="@dimen/left_right_space"
        android:visibility="gone" />

    <TextView
        android:id="@+id/itemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/left_right_space"
        android:gravity="center"
        android:textColor="@color/lib_ptr_text_content"
        android:textSize="@dimen/sp16" />

</LinearLayout>