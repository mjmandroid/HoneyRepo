<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/lib_bg_rounded_box"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lib_bg_head_rounded_box"
            android:gravity="center"
            android:padding="@dimen/left_right_space"
            android:textColor="@color/lib_ptr_btn_yellow_default"
            android:textSize="@dimen/sp19" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lib_ptr_dividing_line_light" />

        <ListView
            android:id="@+id/custom_spinner_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lib_bg_bottom_rounded_box"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />
    </LinearLayout>
</RelativeLayout>